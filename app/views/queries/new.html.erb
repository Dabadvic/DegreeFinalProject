<% provide(:title, "Nueva consulta") %>

<h1>Nueva consulta</h1>

<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<%= form_for(@query, html: { multipart: true }) do |f| %>
			<%= render 'shared/query_errors_messages' %>

			<%= f.label :description, "Breve descripciÃ³n" %>
			<%= f.text_field :description, class: 'form-control' %>

			<span class="fileuploader">
				<%= f.file_field :queryfile, accept:".arff,.dat" %>
			</span>

			<label for="query_description">Clasificador</label>
			<%= f.select(:algorithm) do %>
				<% [['Apriori', "apriori"], ['CN2-SD', "cn2"], ['MESDIF-SD', "mesdif"]].each do |c| %>
					<%= content_tag(:option, c.first, value: c.last) %>
				<% end %>
			<% end %>

			<%= f.submit "Crear consulta", class: "btn btn-primary" %>
		<% end %>
	</div>
</div>